<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="sateesh.com.completeui.DoneBar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="?android:attr/dividerVertical"
        android:dividerPadding="12dp"
        android:padding="6dp"
        android:background="#EBECED"
        android:showDividers="middle"
        android:orientation="horizontal">
        <!-- id must match corresponding menu item id -->
        <LinearLayout
            android:id="@+id/action_cancel"
            style="@style/EditEventCustomActionButton"
            >

            <ImageView
                style="@style/EditEventCustomActionButtonImage"
                android:src="@drawable/ic_cancel_black_24dp" />

            <TextView
                style="@style/EditEventCustomActionButtonText"
                android:text="Cancel" />

        </LinearLayout>

        <!-- id must match corresponding menu item id -->
        <LinearLayout
            android:id="@+id/action_done"
            style="@style/EditEventCustomActionButton">

            <ImageView
                style="@style/EditEventCustomActionButtonImage"
                android:src="@drawable/ic_done_black_24dp" />

            <TextView
                style="@style/EditEventCustomActionButtonText"
                android:text="Save" />

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>


</LinearLayout>
